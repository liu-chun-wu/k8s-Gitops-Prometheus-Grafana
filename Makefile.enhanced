	@echo "$(CYAN)ðŸŒ Complete Service Access Information$(RESET)"
	@echo "$(CYAN)======================================$(RESET)"
	@echo ""
	@echo "$(GREEN)Service URLs:$(RESET)"
	@echo "  ArgoCD:       http://argocd.local"
